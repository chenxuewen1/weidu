<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginView"
    android:background="@drawable/denglu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/login_icon_phone_n_hdpi"/>
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:hint="手机号"
            android:textSize="18sp"
            android:textColorHint="#fff"
            android:background="@null"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="#ffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/login_icon_lock_n_hdpi"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:hint="登录密码"
            android:textColorHint="#fff"

            android:background="@null"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="36dp"
            android:src="@mipmap/login_icon_eye_n_hdhpi"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="#ffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/login_checkbox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginRight="36dp"
            android:text="快速注册"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/login_log"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="登录"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shapee"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:textColor="#ff5f71"/>
    </RelativeLayout>
</LinearLayout>